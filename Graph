// Adj matrix 

#include<bits/stdc++.h>
using namespace std;
int main()
{
    // n nodes   , m edges / lines
    int n , m;
    int adj[n+1][n+1];
    for(int i=0;i<m;i++)
    {
        // u v denotes edges between nodes 
        int u , v ;
        cin >> u >> v ;
        adj[u][v]=1;
        adj[v][u]=1;
    }

    return 0;
}

// ADJ list 
#include<bits/stdc++.h>
using namespace std;
int main()
{
    // n nodes   , m edges / lines
    int n , m;
    int adj[n+1];
    for(int i=0;i<m;i++)
    {
        // u v denotes edges between nodes 
        int u , v ;
        cin >> u >> v ;
        adj[u].push_back(v);
        adj[v].push_back(u);
    }

    return 0;
}

// Weighted matrix 
int u , v , wt ;
cin >> u >> v >> wt;
adj[u][v]=wt;
adj[v][u]=wt;

// Weighted List
// Store as - at index i , store next node , value 
vector<pair<int,int>> adjList[n+1];

// BFS full code in C++
// use Adjacency List 
#include <iostream>
#include <bits/stdc++.h>
using namespace std;
void bfs(vector<int> adj[], int size) {
    queue <int> q;
    int visArray[size];
    q.push(0);
    visArray[0]=1;
    while(!q.empty())
    {
        cout<<q.front();
        int node = q.front();q.pop();
        for(int i : adj[node]) {
            if(visArray[i]!=1) {
                q.push(i);
                visArray[i]=1;
            }
        }
    }
}
int main() {
    int size;
    cin >> size;
    int edge;
    cin >> edge;
    vector<int> adj[size];
    for(int i=0;i<edge;i++)
    {
        int u,v;
        cin >> u >> v ;
        adj[u].push_back(v);
    }
    for(int i=0;i<size;i++) {
        cout<<i<<" -> ";
        for(int val : adj[i]) {
            cout<<val;
        }
        cout<<endl;
    }
    bfs(adj, size);
}

--------------------------------------
Input
5 6
0 1
1 2
2 4
1 3
3 4
0 4
Output
0 -> 14
1 -> 23
2 -> 4
3 -> 4
4 -> 
01423

//DFS
#include<bits/stdc++.h>
using namespace std;
void dfs(vector<int> adj],vector<int> &visited , vector<int> &result , int root)
{
 visited[root]=1;
 result.push_back(root);
 for(int i:adj[root])
 {
  if(!visited[i]){
   dfs(adj,visited,result,i);
  }
 }
}
int main()
{
 int n
 cout << " Enter no of nodes "<<endl;
 cin >> n ;
 int m ;
 vector<int> adj[n];
 adj[1]={2,3};
 adj[2]={1,4,5};
 adj[3]={1};
 adj[4]={2,5};
 adj[5]={4,5};
 vector<int> visited(n,0);
 vector<int> result;
 dfs(adj,visited,result,0);
 for(int i:result)
 {cout<<i<<" ";
  cout<<endl;
 }
 return 0 ;
}

